<div class="col">
  <a href="{% if application.redirect %}{{ application.redirect }}{% else %}{{ application.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if application.img %}
        {%
          include figure.liquid
          loading="eager"
          path=application.img
          sizes = "250px"
          alt="project thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ application.title }}</h2>
        <p class="card-text">{{ application.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if application.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ application.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if application.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ application.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
